<%- include('outsideHeader') -%>
    <div class="container">
        <div class="card login-card">
          <div class="row no-gutters">
            <div class="col-md-5">
              <img src="img/login_books.jpg"  width="550" height="600" alt="login" class="login-card-img">
            </div>
            <div class="col-md-7">
              <div class="card-body">
                <p class="login-card-description">Registration</p>
             
                <% if (typeof errors !== 'undefined') { %>
                  <div class="alert alert-danger">
                      <ul>
                          <% errors.forEach(function(item){ %>
                          <li><%= item %></li>
                          <% }); %>
                      </ul>
                  </div>
                  <% } %>
                <form method="post">
                    <div class="mb-3 form-group">
                        <label for="email" class="form-label">E-mail</label>
                        <input type="email" name="email" id="email" class="form-control" placeholder="pelda@email.hu">
                    </div>
                    <div class="mb-3 form-group">
                      <label for="username" class="form-label">Username</label>
                      <input type="text" name="username" id="username" class="form-control" placeholder="Felhasználónév">
                    </div>
                    <div class="form-group mb-4">
                      <label for="password" class="form-label">Password</label>
                      <input type="password" name="password" id="password" class="form-control" placeholder="***********">
                    </div>
                    <input name="registration" id="registration" class="btn btn-primary" type="submit" value="Registration">
                  </form>
                  <a href="/login" class="btn btn-primary">Back to log in</a>
              </div>
            </div>
          </div>
        </div>
      
